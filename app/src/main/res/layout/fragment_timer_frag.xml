<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timer_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sleep_Timer.Timer_frag">

            <include
                android:id="@+id/timer_toolbar"
                layout="@layout/toolbar" />

            <Chronometer
                android:id="@+id/chronomter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="@dimen/_27sdp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline45"
                app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/pager"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="84dp"
                android:text="TextView"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="232dp" />

    <com.example.poplify.baby_guru_sample.adapter.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_5sdp"

        app:layout_constraintBottom_toTopOf="@+id/guideline61"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline68" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/_97sdp" />

    <com.budiyev.android.circularprogressbar.CircularProgressBar
        android:id="@+id/outer_timer"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        app:animateProgress="true"
        app:backgroundStrokeColor="@color/bef_list_4"
        app:backgroundStrokeWidth="@dimen/_8sdp"
        app:drawBackgroundStroke="true"
        app:foregroundStrokeCap="round"
        app:foregroundStrokeColor="#ffff4081"
        app:foregroundStrokeWidth="@dimen/_3sdp"
        app:progressAnimationDuration="500"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/guideline45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_toolbar" />


    <com.budiyev.android.circularprogressbar.CircularProgressBar
        android:id="@+id/inner_timer"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        app:animateProgress="true"
        app:backgroundStrokeColor="@color/timer_logo"
        app:backgroundStrokeWidth="@dimen/_8sdp"
        app:drawBackgroundStroke="true"
        app:foregroundStrokeCap="round"
        app:foregroundStrokeColor="#ffff4081"
        app:foregroundStrokeWidth="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="@+id/outer_timer"
        app:layout_constraintEnd_toEndOf="@+id/outer_timer"
        app:layout_constraintStart_toStartOf="@+id/outer_timer"
        app:layout_constraintTop_toTopOf="@+id/outer_timer"
        app:progressAnimationDuration="500" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/pause_timer"
        app:layout_constraintBottom_toBottomOf="@+id/inner_timer"
        app:layout_constraintEnd_toEndOf="@+id/inner_timer"
        app:layout_constraintStart_toStartOf="@+id/inner_timer"
        app:layout_constraintTop_toTopOf="@+id/inner_timer" />

    <ImageButton
        android:id="@+id/openGurutips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/chronomter"
        app:layout_constraintTop_toTopOf="@+id/guideline45"
        app:layout_constraintVertical_bias="0.608"
        app:srcCompat="@drawable/top_tips" />



    <android.support.constraint.Guideline
          android:id="@+id/guideline68"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_begin="@dimen/_295sdp" />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="@dimen/_215sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/button_backgrond"
        android:visibility="visible"
        android:text="@string/let_start_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline61"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/btn_baby_sleep"
        android:layout_width="@dimen/_215sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/button_backgrond"
        android:text="baby is asleep"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline61"
        app:layout_constraintVertical_bias="0.309" />


    <Button
        android:id="@+id/btn_baby_sleep_2"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/let_start"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/_10sdp"
        android:text="baby is asleep"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline61"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/cry_sleep"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/button_backgrond"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/_10sdp"
        android:text="@string/crying_head"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_baby_sleep_2"
        app:layout_constraintTop_toTopOf="@+id/guideline61"
        app:layout_constraintVertical_bias="0.52" />


</android.support.constraint.ConstraintLayout>