<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_backgrond"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/session_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session 5"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/main_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_3sdp"
                android:gravity="end"
                android:text="21:30 - 22:04"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/child_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 feb 2018"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.2" />

            <TextView
                android:id="@+id/child_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 mins"
                android:padding="@dimen/_3sdp"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>