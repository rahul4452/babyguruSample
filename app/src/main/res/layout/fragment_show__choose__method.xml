<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".child_profile.ShowSelectMethodFrag">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_for_select_method"/>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_for_select_method"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewPut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/blueHeaderChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/selet_child_inner"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="Cuddle Calm nd Continue "
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:id="@+id/musicPlayerlayoutChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageButton
                android:id="@+id/play_btn_Choose"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                app:srcCompat="@drawable/music_player" />

            <TextView
                android:id="@+id/start_time_Choose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/_3sdp"
                android:text="00:23"

                />

            <SeekBar
                android:id="@+id/music_bar_Choose"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/end_time_Choose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/_3sdp"
                android:text="00:23" />


        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollViewPut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/select_method_btn_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listenSamChoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center_horizontal"
                android:padding="@dimen/_8sdp"
                android:text="Listen to sam describing this method"
                android:textSize="@dimen/_14sdp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/open_choose_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:targetApi="lollipop" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/select_method_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewPut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/select_method_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_58sdp"
            android:layout_marginStart="@dimen/_58sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/button_backgrond"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/_9sdp"
            android:textColor="@color/white"
            android:text="Select Method"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>