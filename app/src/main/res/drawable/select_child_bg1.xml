<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/add_child"/>
            <size
                android:width="@dimen/_15sdp"
                android:height="@dimen/_15sdp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="@dimen/_6sdp"/>
            <solid android:color="@color/add_child_inner"/>
            <size
                android:width="@dimen/_30sdp"
                android:height="@dimen/_30sdp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/add"></item>
</layer-list>